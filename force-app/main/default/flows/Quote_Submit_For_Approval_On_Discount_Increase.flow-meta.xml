        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_Partner_Billing_Type_Bill_through_Partner</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Partner_Margin.Partner_Billing_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Bill through Partner</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>CB_Opportunity_Coupon</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
