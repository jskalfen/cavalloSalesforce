    <decisions>
        <name>CB_Opp_Discount_Partner_Margin_Discount</name>
        <label>CB Opp Discount = Partner Margin Discount?</label>
        <locationX>689</locationX>
        <locationY>602</locationY>
        <defaultConnector>
            <targetReference>Discount_Term_Increased</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_CB_Opp_Discount_Partner_Margin_Discount</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CB_Opportunity_Coupon.Discount__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Partner_Margin.Software_Partner_Margin_Y1__c</elementReference>
                </rightValue>
            </conditions>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <name>Discount_Term_Increased</name>
        <label>Discount/Term Increased?</label>
        <locationX>490</locationX>
        <locationY>757</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_Discount_Term_Increased</name>
            <conditionLogic>(1 AND 2) OR (3 AND 4) OR (5 AND 6)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Discount</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>10.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Discount</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>$Record__Prior.Discount</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Discount_Term_Length__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Discount_Term_Length__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <elementReference>$Record__Prior.Discount_Term_Length__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Is_Discount_Forever__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.Is_Discount_Forever__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>GP_Approval_Process</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <name>Partner_Billing_Type_Bill_through_Partner</name>
