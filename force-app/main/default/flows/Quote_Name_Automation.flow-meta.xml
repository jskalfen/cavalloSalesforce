    <environments>Default</environments>
    <formulas>
        <name>vExpirationDate</name>
        <dataType>Date</dataType>
        <expression>IF({!$Record.RecordType.Name} = &apos;Custom&apos;, Today() +60,{!$Record.ExpirationDate})</expression>
