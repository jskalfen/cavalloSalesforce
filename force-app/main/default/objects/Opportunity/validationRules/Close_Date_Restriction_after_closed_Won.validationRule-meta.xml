<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Close_Date_Restriction_after_closed_Won</fullName>
    <active>false</active>
    <errorConditionFormula>AND( IsClosed,  ISCHANGED( CloseDate ), 
$User.Id &lt;&gt; &quot;0053u000004D3uu&quot;, 
$User.Id &lt;&gt; &quot;0056A000000wpmm&quot;,
$User.Id &lt;&gt; OwnerId,
$User.Id &lt;&gt; &quot;0053u000002lxy5&quot;,
$User.Id &lt;&gt; &quot;0053u000003bHSi&quot;
)</errorConditionFormula>
    <errorMessage>Close Date is not allowed to change after Closed Won</errorMessage>
</ValidationRule>
