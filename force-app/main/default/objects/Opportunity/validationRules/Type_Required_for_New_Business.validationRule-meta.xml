<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Type_Required_for_New_Business</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Type, &quot;&quot;)
&amp;&amp; RecordType.DeveloperName = &quot;New_Business&quot;
&amp;&amp; ISCHANGED(StageName)
&amp;&amp; !ISPICKVAL(StageName, &quot;Discovery&quot;)
&amp;&amp; $Profile.Name != &quot;System Administrator&quot;</errorConditionFormula>
    <errorDisplayField>Type</errorDisplayField>
    <errorMessage>Type is required</errorMessage>
</ValidationRule>
