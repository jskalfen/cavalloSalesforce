<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Source_subsource_req_after_121522</fullName>
    <active>false</active>
    <description>Source and Subsource are required for Opportunities created after 12/15/22</description>
    <errorConditionFormula>IF(
AND(DATEVALUE(CreatedDate) &gt; DATE(2022,12,15) , 
OR( ISBLANK(TEXT(Opportunity_SubSource_Global__c)), ISBLANK(TEXT(Opportunity_Source_Global__c))
)
), TRUE,FALSE
)</errorConditionFormula>
    <errorMessage>Opportunity Source and Subsource are required</errorMessage>
</ValidationRule>
