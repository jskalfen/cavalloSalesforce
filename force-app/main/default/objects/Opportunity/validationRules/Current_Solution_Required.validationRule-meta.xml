<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Current_Solution_Required</fullName>
    <active>true</active>
    <errorConditionFormula>RecordType.DeveloperName = &quot;New_Business&quot;
&amp;&amp; ISPICKVAL(Closed_Reason__c, &quot;Kept current solution&quot;)
&amp;&amp; ISBLANK(Current_Solution__c)</errorConditionFormula>
    <errorDisplayField>Current_Solution__c</errorDisplayField>
    <errorMessage>Required when Closed Reason is Kept current solution</errorMessage>
</ValidationRule>
