<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AC_No_Feedback_required_to_provide_Reas</fullName>
    <active>true</active>
    <description>When AC feedback is NO then user should provide the reason for No - SE - 2/9/2022</description>
