<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Type_Required</fullName>
    <active>false</active>
    <errorConditionFormula>AND(AND(ISBLANK(TEXT(Type)), ISNEW()), NOT(ISPICKVAL(AccountSource,&quot;InsideView&quot;)))</errorConditionFormula>
    <errorMessage>Account type is required on new accounts</errorMessage>
</ValidationRule>
