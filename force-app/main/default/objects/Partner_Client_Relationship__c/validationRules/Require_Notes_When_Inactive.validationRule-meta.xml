<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Notes_When_Inactive</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Partner_Client_Margin_Eligibility__c, &quot;Inactive&quot;),
ISBLANK(Notes__c)
)</errorConditionFormula>
    <errorDisplayField>Notes__c</errorDisplayField>
    <errorMessage>&quot;Please enter a reason in the Note field for Inactive status.&quot;</errorMessage>
</ValidationRule>
